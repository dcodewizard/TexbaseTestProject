@model WebApplication3.Models.CompayAddressViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.CompanyID)
        <form method="post" action="/Companies/Edit">
            <div class="form-horizontal">
                <h4>Edit Company</h4>
                <hr />
                <div class="form-group">
                    <label for="CompanyName">Company Name:</label>
                    <input type="text" id="CompanyName" name="CompanyName" value="@Model.CompanyName" />
                    @Html.ValidationMessageFor(model => model.CompanyName, "", new { style = "color: red;" })
                </div>

                <div class="form-group">
                    <label for="Street">Street:</label>
                    <input type="text" id="Street" name="Street" value="@Model.Street" />
                    @Html.ValidationMessageFor(model => model.Street, "", new { style = "color: red;" })
                </div>

                <div class="form-group">
                    <label for="City">City:</label>
                    <input type="text" id="City" name="City" value="@Model.City" />
                    @Html.ValidationMessageFor(model => model.City, "", new { style = "color: red;" })
                </div>

                <div class="form-group">
                    <input type="submit" value="Update" class="btn btn-default" />
                </div>
            </div>
        </form>
    }
</body>
</html>
